    'description' => 'synch types',
    'fields' => array(
      'uid' => array(
        'type' => 'int',
        'description' => 'uid',
        'unsigned' => true,
        'not null' => true,
        'default' => 0,
      ),
      'synch_type' => array(
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
        'description' => 'The types array users synch, default not synch.',
      ),
    ),
    
    'primary key' => array('uid'),
    'foreign keys' => array(
      'user' => array(
        'table' => 'users',
        'columns' => array('uid' => 'uid'),
      ),
    ),
  );
  return $schema;
}

